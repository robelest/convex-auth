{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "useDefineForClassFields": false,
    "lib": ["ESNext", "DOM"],
    "types": ["node", "vitest/globals"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["index.ts", "src/**/*.ts", "test/**/*.ts", "vitest.config.ts"]
}
