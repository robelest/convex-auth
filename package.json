{
  "name": "convex-auth-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:convex": "bunx convex dev",
    "dev:tanstack": "bun run --cwd examples/tanstack dev",
    "dev:portal": "bun run --cwd packages/portal dev",
    "build": "bun run --cwd packages/auth build",
    "build:portal": "bun run --cwd packages/portal build",
    "build:portal:cdn": "PORTAL_BUILD_TARGET=cdn bun run --cwd packages/portal build",
    "upload:portal": "bunx @robelest/convex-auth portal upload --dist packages/portal/build --component portal",
    "upload:portal:prod": "bunx @robelest/convex-auth portal upload --dist packages/portal/build --component portal --prod",
    "deploy:portal": "bun run build:portal && bun run upload:portal",
    "deploy:portal:prod": "bun run build:portal && bun run upload:portal:prod",
    "deploy:cdn": "bun run build:portal && bun run build:portal:cdn && node scripts/build-cdn-deploy.js && bunx wrangler pages deploy cdn-stage --project-name convex-auth-portal --branch main",
    "publish": "bun run --cwd packages/auth build && bun publish --cwd packages/auth",
    "publish:full": "bun run deploy:cdn && bun run --cwd packages/auth build && bun publish --cwd packages/auth",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "bun run --cwd packages/test test:once",
    "codegen:convex": "bunx convex codegen && bunx convex codegen --component-dir ./packages/auth/src/component",
    "dashboard:convex": "bunx convex dashboard",
    "run:convex": "bunx convex run"
  },
  "workspaces": {
    "packages": ["packages/*", "examples/*"],
    "catalog": {
      "convex": "1.31.7",
      "convex-test": "^0.0.41",
      "vite": "7.3.1"
    }
  },
  "dependencies": {
    "@auth/core": "^0.37.0",
    "@convex-dev/self-hosting": "^0.1.0",
    "@oslojs/crypto": "^1.0.1",
    "@robelest/convex-auth": "workspace:*",
    "convex": "^1.31.7",
    "convex-helpers": "^0.1.111"
  },
  "devDependencies": {
    "@convex-dev/eslint-plugin": "^1.1.1",
    "@eslint/js": "^9.37.0",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.43.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "eslint": "^9.39.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.4.0",
    "svelte": "^5.39.5",
    "typescript-eslint": "^8.46.1"
  },
  "overrides": {
    "vite": "7.3.1"
  }
}
