{
  "name": "convex-auth-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:convex": "bunx convex dev",
    "dev:tanstack": "bun run --cwd examples/tanstack dev",
    "build": "bun run --cwd packages/auth build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "bun run --cwd packages/test test:once",
    "codegen:convex": "bunx convex codegen && bunx convex codegen --component-dir ./packages/auth/src/component",
    "dashboard:convex": "bunx convex dashboard",
    "run:convex": "bunx convex run"
  },
  "workspaces": {
    "packages": ["packages/*", "examples/*"],
    "catalog": {
      "convex": "1.31.7",
      "convex-test": "^0.0.41",
      "vite": "7.3.1"
    }
  },
  "dependencies": {
    "@auth/core": "^0.37.0",
    "@oslojs/crypto": "^1.0.1",
    "@robelest/convex-auth": "workspace:*",
    "convex": "^1.31.7"
  },
  "devDependencies": {
    "@convex-dev/eslint-plugin": "^1.1.1",
    "@eslint/js": "^9.37.0",
    "eslint": "^9.39.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.4.0",
    "typescript-eslint": "^8.46.1"
  },
  "overrides": {
    "vite": "7.3.1"
  }
